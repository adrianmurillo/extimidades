<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.extimidades.1"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Extimidades 1</name>

    <description>
        Primer ejemplar de la revista Extimidades, del Colectivo Costarricense de Psicología de la Liberación.
    </description>

    <author href="http://extimidades.com" email="extimidades@armdilloruin.com">
        Extimidades
    </author>

    <preference name="target-device" value="tablet" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="detect-data-types" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />

    <icon src="gap/icons/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="gap/icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="gap/icons/ios/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="gap/icons/ios/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />

    <gap:splash src="gap/splash/ios/splash-320x480.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="gap/splash/ios/splash-640x1136.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="gap/splash/ios/splash-640x960.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="gap/splash/ios/splash-1536x2008.png" gap:platform="ios" width="1536" height="2008" />
    <gap:splash src="gap/splash/ios/splash-768x1024.png" gap:platform="ios" width="768" height="1024" />

</widget>